@require 'colors.styl'

html
body
    height 100%
    font-family 'Open Sans', sans-serif

html
    font-size 10px
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    scroll-padding 46px 0 0 0

body
    margin 0
    color rgba(20, 20, 20, 0.85)
    overflow-y scroll
    font-size 14px
    line-height 1.42857143
    color #333
    background-color #fff

*
    box-sizing border-box

:after
:before
    box-sizing border-box

a
    background-color transparent
    text-decoration none

a:active
a:hover
    outline 0

a:focus
a:hover
    text-decoration underline

h1
h2
    font-family inherit
    font-weight 500
    line-height 1.1
    color inherit
    margin-top 20px
    margin-bottom 10px

h1
    font-size 36px

h2
    font-size 30px

p
    margin 0 0 15px

img
    border 0
    vertical-align middle

ul
    margin 0 0 10px

.nav
    padding-left 0
    margin-bottom 0

.nav > li > a
    display block

.nav > li > a:focus
.nav > li > a:hover
    text-decoration none

.nav:after
.nav:before
    display table
    content " "

.nav:after
    clear both

@-ms-viewport
    width device-width

.noscript
    font-size 26px
    text-align center
    display inline-block
    color #eb807a
    width 100%
    position fixed
    z-index 100
    margin-top 450px
    background-color #f5f5f5

    
.noscript > a
    color #e55952
    text-decoration underline

.preload
    *
    :before
    :after
        transition none !important

.mail:after
    content attr(data-user) "@futuresymphony.lt"

.mail:hover
    cursor pointer

.cover-heading
    margin-bottom 15px
    font-size 4vmin

.cover-subheading
    margin-top 25px
    color rgba(70, 70, 70, .8)
    font-style italic
    font-size 3vmin
    text-align center

.link
.link:focus
    text-decoration none
    border-bottom 1px solid var(--color-link)
    color var(--color-link)
    transition all 0.1s ease

.link:hover
    text-decoration none
    border-bottom 2px solid var(--color-link-hover)
    color var(--color-link-hover)
    cursor pointer

@media (min-width: 1200px)
    h1
        font-size 30px

    h2
        font-size 24px

@media (min-width: 1400px)
    h1
        font-size 34px

    h2
        font-size 28px

@media (min-width: 1600px) and (min-height: 900px)
    h1
        font-size 36px

    h2
        font-size 30px

@media screen and (max-device-width: 600px)
    .cover-heading
        margin-bottom 10px
        font-size 5vmin

@media print
    *
    :after
    :before
        color #000 !important
        text-shadow none !important
        background 0 0 !important
        box-shadow none !important

    a
    a:visited
        text-decoration underline

    a[href]:after
        content " (" attr(href) ")"

    img
        page-break-inside avoid
        max-width 100% !important

    h2
    p
        orphans 3
        widows 3

    h2
        page-break-after avoid