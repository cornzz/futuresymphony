.dropshadow:hover
    cursor pointer
    box-shadow 1px 1px 4px 2px #CCCCCC

.news-item
    height 26%
    margin-bottom 1.3%

.news-img-small
    float left 
    height 100%

.news-item > div
    height 100%
    padding 5px 10px 10px
    overflow-y hidden
    border 1px solid #aaa

.picture
    width 100%
    height 100%
    top -100%
    position fixed
    background-color rgba(0, 0, 0, .7)
    opacity 0
    transition opacity .3s linear
    z-index 10

.picture > a > div
    width 100%
    height 100%
    cursor default

.picture-close
    text-decoration none
    cursor pointer

.picture img
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    margin auto
    border 3px solid #fff
    box-shadow 0 0 20px rgba(0, 0, 0, .7)
    max-height 0%
    max-width 0
    text-align center
    line-height 6500%
    -ms-user-select none
    -webkit-user-select none
    user-select none

.picture:target
    opacity 1
    top 0
    bottom 0

.picture:target img
    max-height 100%
    max-width 100%

.picture:target
span.picture-close
    top 0

.picture-close
    display block
    width 50px
    height 50px
    box-sizing border-box
    background #fff
    color #000
    position absolute
    top -80px
    right 0
    transition .1s ease-in-out

.picture-close:hover
    background rgba(255, 255, 255, .8)

.picture-close:after
.picture-close:before
    content ""
    display block
    height 30px
    width 1px
    background #000
    position absolute
    left 26px
    top 10px

.picture-close:before
    transform rotate(45deg)

.picture-close:after
    transform rotate(-45deg)

.news-img
    float left
    max-height 50vh
    padding 10px 20px 10px 0

.news-img:hover
    cursor pointer

