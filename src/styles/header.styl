.landing
    height 100vh
    background-color rgba(0, 0, 0, 0.7)
    outline none
    display flex
    flex-direction column
    align-items center
    justify-content center

    span
        font-family 'Audiowide', 'Courier New'
        color #fafafa
        text-shadow 2px 2px 14px #444444
        text-align center
        font-size 11vmin
        line-height 1.1
        text-decoration none    
        -webkit-user-select none
        -ms-user-select none
        user-select none

    .sub
        font-size 2.2vmin
        letter-spacing 0.05em

/* -- Mobile nav -- */

.mobile-nav
    display none
    grid-template-columns 42px 1fr 42px
    align-items center
    height 45px
    width 100%

    .menu
        background-color var(--color-primary)
        position fixed
        opacity 0
        pointer-events none
        transition all 0.15s ease
        top 0
        left 0
        width 100%
        height 100%
        display flex
        flex-direction column
        justify-content center

        .links
            display flex
            flex-direction column
            justify-content center
            align-items center

            a
                color rgba(255, 255, 255, .6)
                text-shadow 0px 0px 15px #333
                font-size 24px
                height 40px
                line-height 40px
                margin-bottom 12px
                padding 0 10px
                text-decoration none
                text-transform capitalize

                &:last-child
                    margin-bottom 0

                &:focus
                    color rgba(255, 255, 255, 1)
                
                &:global(.active)
                    color rgba(255, 255, 255 0.9)

        hr
            background-color rgba(255, 255, 255, .6)
            width 100px
            height 2px
            margin 40px auto

        .language
            position relative
            display flex
            justify-content center

        &.active
            opacity 1
            pointer-events all

    .title
        font-family 'Audiowide', 'Courier New'
        text-decoration none
        color #fafafa
        text-shadow 2px 2px 20px #666
        font-size clamp(17px, 5vmin, 25px)
        text-align center
        white-space nowrap
        opacity 0
        transition all 0.2s ease

    .menu-icon
        display block
        margin 0 10px
        width 22px
        height 28px 
        position relative
        z-index 1000

        &:hover
            cursor pointer

            .line
                background rgba(255,255,255,0.85)

        .line  
            position absolute
            height 2px
            width 22px
            background #fff
            border-radius 1px
            display block 
            transition all 0.25s ease
            transform-origin center

            &:nth-child(1)
                top 5px

            &:nth-child(2)
                top 12px

            &:nth-child(3)
                top 19px

        &.open
            .line:nth-child(1)
                transform translateY(7px) rotate(-135deg)

            .line:nth-child(2)
                opacity 0
                transform rotate(-360deg)

            .line:nth-child(3)
                transform translateY(-7px) rotate(-225deg)

/* -- Desktop nav -- */

.desktop-nav
    display flex
    justify-content space-between
    align-items center

.masthead
    width 100% 
    background-color rgba(0, 0, 0, 0.3)
    position absolute
    padding 0 10px
    border-bottom 2px solid black
    border-bottom-color #adadad
    z-index 10

    &:global(.active)
        background-color var(--color-primary)
        position fixed

        .mobile-nav .title
            opacity 1

.masthead-nav
    li
        display inline-block
        margin-bottom -2px

        a
            padding 10px 0
            font-size 16px
            color rgba(255, 255, 255, .6)
            text-shadow 1px 1px 1px rgba(0, 0, 0, .9)
            transition color 0.15s linear
            outline none
            text-transform capitalize

        &:hover > a
        a:focus
        &:global(.clicked) > a
            color rgba(255, 255, 255, 1)

        &:global(.active) > a
        &:global(.active) > a:focus
            color rgba(255, 255, 255, 0.9)

        &:after
            display block
            content ''
            border-bottom solid 2px #fff
            transform scaleX(0)
            transform-origin 100% 50%
            transition transform 250ms ease-in-out

        &:hover:after
        &:global(.active):after
        &:global(.clicked):after
            transform scaleX(1)
            transform-origin 0% 50%

        &:global(.active):after
        &:global(.clicked):after
            transition none

    li + li
        margin-left 20px

.back
    opacity 0
    pointer-events none
    background-color rgba(0, 0, 0, 0.35)
    transition all 0.1s
    border-radius 2px
    position fixed
    bottom 70px
    right 30px
    z-index 7

    &:hover
    &:focus
        cursor pointer
        filter brightness(150%)
        background-color rgba(0, 0, 0, 0.55)

    img
        pointer-events none
        width 35px
        height 35px

    &:global(.active)
        opacity 1
        pointer-events auto

