.landing
    height 100vh
    background-color rgba(0, 0, 0, 0.7)
    outline none
    display flex
    flex-direction column
    align-items center
    justify-content center

    span
        font-family 'Audiowide', "Courier New"
        color #fafafa
        text-shadow 2px 2px 14px #444444
        text-align center
        font-size 110px
        line-height 1.1
        text-decoration none    
        -webkit-user-select none
        -ms-user-select none
        user-select none

    .sub
        font-size 24px
        letter-spacing 0.05em

.flags
    display flex

    .flag
        width 32px
        height 16px

        &:hover
        &:focus
            box-shadow 0 0 2px 0 #BBBBBB
            cursor pointer

        &:hover > img:nth-child(2)
        &:focus > img:nth-child(2)
            opacity 1

    .flag:first-of-type
        margin-right 20px

    img
        position absolute
        width 32px
        transition all 0.1s ease-in-out
        top 50%
        transform translate(0, -50%)

    img:nth-child(2)
        opacity 0

    .active
        opacity 1 !important

.back
    display none
    background-color: rgba(0, 0, 0, 0.3)
    border-radius 2px
    position: fixed
    width 32px
    height 32px
    bottom 70px
    right 30px

    &:hover
    &:focus
        cursor pointer
        filter brightness(150%)

    img
        pointer-events none

.back.active
    display inline-block

.masthead
    width 100% 
    background-color rgba(0, 0, 0, 0.3)
    position absolute
    display flex
    justify-content space-between
    align-items center
    margin-right 20px
    border-bottom 2px solid black
    border-bottom-color #adadad
    z-index 1

.masthead.active
    background-color var(--color-primary)
    position fixed

.masthead-nav > li
    display inline-block
    margin-bottom -2px

.masthead-nav > li + li
    margin-left 25px

.masthead-nav > li > a
    padding 10px 0
    font-size 22px
    color rgba(255,255,255,.6)
    text-shadow 1px 1px 1px rgba(0,0,0,.9)
    transition color 0.15s linear
    outline none

.masthead-nav > li:hover > a
.masthead-nav > li > a:focus
.masthead-nav > li.clicked > a
    color rgba(255,255,255,1)

.masthead-nav > .active > a
.masthead-nav > .active > a:focus
    color rgba(255, 255, 255, 0.9)

.masthead-nav > li:after
    display block
    content ''
    border-bottom solid 2px #fff  
    transform scaleX(0)  
    transform-origin 100% 50%
    transition transform 250ms ease-in-out

.masthead-nav > li:hover:after
.masthead-nav > .active:after
.masthead-nav > .clicked:after
    transform scaleX(1)
    transform-origin 0% 50%

.masthead-nav > .active:after 
.masthead-nav > .clicked:after
    transition none

