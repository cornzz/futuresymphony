.landing
    height 100vh
    background-color rgba(0, 0, 0, 0.7)
    outline none
    display flex
    flex-direction column
    align-items center
    justify-content center

    span
        font-family 'Audiowide', 'Courier New'
        color #fafafa
        text-shadow 2px 2px 14px #444444
        text-align center
        font-size 11vmin
        line-height 1.1
        text-decoration none    
        -webkit-user-select none
        -ms-user-select none
        user-select none

    .sub
        font-size 2.2vmin
        letter-spacing 0.05em

/* -- Mobile nav -- */

.mobile-nav
    display none
    grid-template-columns 42px 1fr 42px
    align-items center
    height 50px
    width 100%

    .menu
        background-color var(--color-primary)
        position fixed
        opacity 0
        pointer-events none
        transition all 0.15s ease
        top 0
        left 0
        width 100%
        height 100%
        display flex
        flex-direction column
        justify-content center

        .links
            display flex
            flex-direction column
            justify-content center
            align-items center

            a
                color rgba(255, 255, 255, .6)
                text-shadow 0px 0px 15px #333
                font-size 24px
                height 40px
                line-height 40px
                margin-bottom 12px
                padding 0 10px
                text-decoration none

                &:last-child
                    margin-bottom 0

                &:focus
                    color rgba(255, 255, 255, 1)

        hr
            width 100px
            margin 40px auto

        .language
            position relative
            display flex
            justify-content center

        &.active
            opacity 1
            pointer-events all

    .title
        font-family 'Audiowide', 'Courier New'
        color #fafafa
        text-shadow 2px 2px 20px #666
        font-size clamp(17px, 5vmin, 25px)
        text-align center
        line-height 50px
        white-space nowrap
        opacity 0
        transition all 0.2s ease

    .menu-icon
        display block
        margin 10px
        width 22px
        height 28px 
        position relative
        z-index 1000

        &:hover
            cursor pointer

        .line  
            position absolute
            height 2px
            width 22px
            background: #fff
            border-radius 1px
            display block 
            transition 0.1s 
            transform-origin center

            &:nth-child(1)
                top 7px

            &:nth-child(2)
                top 14px

            &:nth-child(3)
                top 21px

        &.open
            .line:nth-child(1)
                transform translateY(7px) rotate(-45deg)

            .line:nth-child(2)
                opacity 0

            .line:nth-child(3)
                transform translateY(-7px) rotate(45deg)

/* -- Desktop nav -- */

.back
    display none
    background-color: rgba(0, 0, 0, 0.35)
    transition all 0.02s
    border-radius 2px
    position: fixed
    width 35px
    height 35px
    bottom 70px
    right 30px

    &:hover
    &:focus
        cursor pointer
        filter brightness(150%)
        background-color: rgba(0, 0, 0, 0.55)

    img
        pointer-events none

.back.active
    display inline-block

.desktop-nav
    display flex
    justify-content space-between
    align-items center

.masthead
    width 100% 
    background-color rgba(0, 0, 0, 0.3)
    position absolute
    padding 0 10px
    border-bottom 2px solid black
    border-bottom-color #adadad
    z-index 1

.masthead.active
    background-color var(--color-primary)
    position fixed

    .mobile-nav .title
        opacity 1

.masthead-nav > li
    display inline-block
    margin-bottom -2px

.masthead-nav > li + li
    margin-left 17px

.masthead-nav > li > a
    padding 10px 0
    font-size 16px
    color rgba(255, 255, 255, .6)
    text-shadow 1px 1px 1px rgba(0, 0, 0, .9)
    transition color 0.15s linear
    outline none

.masthead-nav > li:hover > a
.masthead-nav > li > a:focus
.masthead-nav > li.clicked > a
    color rgba(255, 255, 255, 1)

.masthead-nav > .active > a
.masthead-nav > .active > a:focus
    color rgba(255, 255, 255, 0.9)

.masthead-nav > li:after
    display block
    content ''
    border-bottom solid 2px #fff  
    transform scaleX(0)  
    transform-origin 100% 50%
    transition transform 250ms ease-in-out

.masthead-nav > li:hover:after
.masthead-nav > .active:after
.masthead-nav > .clicked:after
    transform scaleX(1)
    transform-origin 0% 50%

.masthead-nav > .active:after 
.masthead-nav > .clicked:after
    transition none

